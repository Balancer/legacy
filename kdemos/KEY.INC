;================================================
; Ждать нажатия на клавишу и вернуть её код в AX
;================================================

Key     proc    near
        mov     ah,10h
        int     16h
        ret
Key     endp

; Проверить наличие клавиши ( ZF, если нет)

Inkey   proc    near
        mov     ah,11h
        int     16h
        ret
Inkey   endp