PutPixel        proc    near
; На входе : ES - Видео-сегмент
;            AL - Color (0..255) //////255 - Transparent////////
;            BX - X (0..319)
;            DX - Y (0..199)
;------------Портит DI !!!
;        add     al,1
;        jc      exit
;        dec     al
        mov     di,bx
        shl     dx,6
        add     di,dx
        shl     dx,2
        add     di,dx
        stosb
exit:   ret
PutPixel        endp
